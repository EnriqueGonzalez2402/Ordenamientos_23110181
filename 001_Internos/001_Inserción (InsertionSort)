def insertion_sort(arr):
    print("Inicio del algoritmo Insertion Sort")
    for i in range(1, len(arr)):
        key = arr[i]
        j = i - 1
        print(f"\nInsertando {key} en la parte ordenada: {arr[:i]}")
        while j >= 0 and key < arr[j]:
            arr[j + 1] = arr[j]
            j -= 1
            print(f"Desplazando {arr[j+1]} a la derecha â†’ {arr}")
        arr[j + 1] = key
        print(f"Insertado {key} â†’ {arr}")
    print("\nArreglo final ordenado:", arr)
    return arr
